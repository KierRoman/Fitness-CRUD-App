<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>
        <%=exercises.name%>
    </title>
</head>

<body>
    <h1 id="new">Exercises</h1>
    <div id="new-ex-body">
    <form action="/users/<%= user._id %>/workouts/<%=workouts._id%>/exercises/<%=exercises._id%>?_method=PUT"
        method="POST">
        <div id="new-btns"> <button type="button" onclick="window.history.back();"><i class="fa-solid fa-left-long"></i></button>
            <button type="submit"><i class="fa-solid fa-cloud-arrow-up"></i></button>
        </div>
        <div id="cat-field">
            <label for="category">Category:</label>
            <select name="category" id="category">
                <option value="weights" <%=exercises.category==='weights' ? 'selected' : '' %>>Weights</option>
                <option value="cardio" <%=exercises.category==='cardio' ? 'selected' : '' %>>Cardio</option>
            </select>
        </div>

        <div class="form-buttons">
            <label for="name">Exercise Name:</label>
            <input type="text" name="name" value="<%=exercises.name%>" required>
        </div>

        <div class="form-buttons">
            <label for="reps">Reps:</label>
            <input type="number" name="reps" value="<%=exercises.reps%>">
        </div>

        <div class="form-buttons">
            <label for="sets">Sets:</label>
            <input type="number" name="sets" value="<%=exercises.sets%>">
        </div>

        <div class="form-buttons">
            <label for="duration">Duration (minutes, for cardio):</label>
            <input type="number" name="duration" value="<%=exercises.duration%>">
        </div>

        <div class="form-buttons">
            <label for="notes">Notes:</label>
            <textarea id="textarea" name="notes"><%= exercises.notes%></textarea>
        </div>
    </form>
</div>

<script>
        document.addEventListener("DOMContentLoaded", function () {
            const catSelect = document.getElementById("category");
            const nameField = document.querySelector('input[name="name"]').parentElement;
            const repsField = document.querySelector('input[name="reps"]').parentElement;
            const setsField = document.querySelector('input[name="sets"]').parentElement;
            const durationField = document.querySelector('input[name="duration"]').parentElement;

            function updateFormFields() {
                const category = catSelect.value;

                if (category === "weights") {
                    nameField.style.display = "block";
                    repsField.style.display = "block";
                    setsField.style.display = "block";
                    durationField.style.display = "none";
                } else if (category === "cardio") {
                    nameField.style.display = "block";
                    repsField.style.display = "none";
                    setsField.style.display = "none";
                    durationField.style.display = "block"; 
                }
            }

            updateFormFields();

            catSelect.addEventListener("change", updateFormFields);
        })
    </script>

</body>

</html>